<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AdminLibrosDisponibles"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@color/black">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:id="@+id/Usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingStart="15sp"
                android:text="Usuario"
                android:textColor="@color/white"
                android:textSize="10pt"

                />

            <TextView

                android:id="@+id/nombreUsuario"
                android:layout_width="201dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="nombre usuario"
                android:inputType="textPersonName"
                android:paddingStart="15sp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"

                android:textSize="10pt"

                />


        </LinearLayout>

        <ImageView
            android:id="@+id/masUsuario"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/mas"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/flechaUsuario"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:src="@drawable/flecha"

            />

    </LinearLayout>

    <SearchView
        android:id="@+id/BuscarLibroUsuario"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="20sp"
        android:textColorHint="@color/white"
        android:drawableLeft="@drawable/seace"
        android:textColor="@color/white"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:background="@drawable/fondos_boton_buscar"
        android:hint="Buscar..."/>

    <TextView

        android:id="@+id/tituloVistaUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/purple_500" />



</LinearLayout>