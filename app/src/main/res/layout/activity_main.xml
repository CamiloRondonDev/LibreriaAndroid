<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".Login">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:text="Inicia Sesion" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#7E7777"
        android:text="ven a leer y deja que tu imaginacion"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="15sp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#7E7777"
        android:text="pueda volar sin limites"
        android:textAlignment="center"
       android:layout_marginTop="1dp"
        android:textSize="15sp"
        />

    <EditText
        android:id="@+id/correoIniciarSesion"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/fondos_editex"
        android:ems="10"
        android:hint="correo"
        android:inputType="textEmailAddress"
        android:paddingStart="20sp"
        android:text=""
        android:textColor="@color/white"
        android:textColorHint="#6E6B6B" />

    <EditText
        android:id="@+id/contraseña_iniciar_sesion"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/fondos_editex"
        android:ems="10"
        android:hint="contraseña"
        android:text=""
        android:inputType="textPassword"
        android:paddingStart="20sp"
        android:textColor="@color/white"
        android:textColorHint="#6E6B6B"


        />

    <Button
        android:id="@+id/boton_inicar_sesion"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="90dp"
        android:textAllCaps="false"
        android:background="@drawable/fondos_boton_inicar_sesion"
        android:text="Iniciar Sesion"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:background="#000000"> <!-- fondo negro o el que uses -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿No estás registrado?"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/boton_crear_cuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear Cuenta"
            android:textAllCaps="false"
            android:textColor="#EFE8E8"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- OPCIONAL: Botón para recuperar contraseña -->
        <Button
            android:id="@+id/boton_olvidaste_contrasena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Olvidaste tu contraseña?"
            android:textAllCaps="false"
            android:textColor="#EFE8E8"
            android:textSize="14sp"
            android:background="@android:color/transparent" />
    </LinearLayout>


</LinearLayout>