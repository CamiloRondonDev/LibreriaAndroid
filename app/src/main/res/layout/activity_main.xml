<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".Login">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"

        android:text="Inicia Sesion" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#7E7777"
        android:text="ven a leer y deja que tu imaginacion"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="15sp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#7E7777"
        android:text="pueda volar sin limites"
        android:textAlignment="center"

       android:layout_marginTop="1dp"
        android:textSize="15sp"
        />

    <EditText
        android:id="@+id/correoIniciarSesion"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/fondos_editex"
        android:ems="10"
        android:hint="correo"
        android:text=""
        android:inputType="textEmailAddress"
        android:paddingStart="20sp"
        android:textColor="@color/white"
        android:textColorHint="#6E6B6B" />

    <EditText
        android:id="@+id/contraseña_iniciar_sesion"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/fondos_editex"
        android:ems="10"
        android:hint="contraseña"
        android:text=""
        android:inputType="textPassword"
        android:paddingStart="20sp"
        android:textColor="@color/white"
        android:textColorHint="#6E6B6B"


        />

    <Button
        android:id="@+id/boton_inicar_sesion"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="90dp"
        android:textAllCaps="false"
        android:background="@drawable/fondos_boton_inicar_sesion"
        android:text="Iniciar Sesion"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        >


        <TextView
            android:layout_width="149dp"
            android:layout_height="30dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="30dp"
            android:text="No estas registrado?"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/boton_crear_cuenta"
            android:layout_width="106dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="120dp"
            android:text="Crear Cuenta"
            android:textAllCaps="false"
            android:textColor="#EFE8E8"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>