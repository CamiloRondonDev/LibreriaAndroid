<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/black"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:text="Restablecer ContraseÃ±a" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#7E7777"
        android:text="Ingresa tu correo ya registrado"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="15sp"

        />

    <EditText
        android:id="@+id/correoRecuperar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/fondos_editex"
        android:ems="10"
        android:hint="correo"
        android:inputType="textEmailAddress"
        android:paddingStart="20sp"
        android:text=""
        android:textColor="@color/white"
        android:textColorHint="#6E6B6B" />

    <Button
        android:id="@+id/botonEnviarCorreo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="90dp"
        android:textAllCaps="false"
        android:background="@drawable/fondos_boton_inicar_sesion"
        android:text="Restuaurar"
        android:textSize="20sp"
        android:textStyle="bold"/>
</LinearLayout>
